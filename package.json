{
  "name": "timecheck-api",
  "version": "1.0.0",
  "private": true,
  "description": "Timecheck Backend",
  "main": "dist/main/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krish-21/Timecheck-API.git"
  },
  "author": "Krishna Nanduri",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/krish-21/Timecheck-API/issues"
  },
  "homepage": "https://github.com/krish-21/Timecheck-API#readme",
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.build.json",
    "start": "NODE_PATH=dist node dist/main/server.js",
    "preserve": "rimraf dist && tsc -p ./tsconfig.dev.json",
    "serve": "tsc -w -p ./tsconfig.dev.json & NODE_PATH=dist nodemon dist/main/server.js",
    "generate": "prisma generate",
    "migrateDev": "prisma migrate dev",
    "createMigration": "prisma migrate dev --name",
    "migrateProd": "prisma migrate deploy",
    "resetDB": "prisma migrate reset",
    "studio": "prisma studio --port 5555 --browser none",
    "dev": "npm run serve & npm run studio",
    "prepareHusky": "husky install",
    "lintStaged": "lint-staged",
    "test": "jest -c ./jest.config.js -i",
    "test:unit": "jest -c ./jest.config.js --selectProjects Unit -i",
    "integrationTests": "jest -c ./jest.config.js --selectProjects Integration -i",
    "intTestDocker:up": "docker-compose -f docker-intTest.yaml up -d",
    "intTestDocker:down": "docker-compose -f docker-intTest.yaml down",
    "test:int": "npm run migrateProd && npm run integrationTests"
  },
  "dependencies": {
    "@prisma/client": "^4.12.0",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "prisma": "^4.12.0",
    "rimraf": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint --config ./.eslint.cjs  --ignore-path ./.eslintignore",
    "src/**": "prettier --check --config ./.prettierrc.json --ignore-path ./.prettierignore"
  }
}
