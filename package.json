{
  "name": "timecheck-api",
  "version": "1.0.0",
  "description": "Timecheck Backend",
  "main": "dist/main/server.js",
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.json",
    "start": "NODE_PATH=dist node dist/main/server.js",
    "preserve": "rimraf dist && tsc -p ./tsconfig.json",
    "serve": "tsc -w -p ./tsconfig.json & NODE_PATH=dist nodemon dist/main/server.js",
    "prepareHusky": "husky install",
    "lintStaged": "lint-staged",
    "test": "echo TODO"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krish-21/Timecheck-API.git"
  },
  "author": "Krishna Nanduri",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/krish-21/Timecheck-API/issues"
  },
  "homepage": "https://github.com/krish-21/Timecheck-API#readme",
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "rimraf": "^5.0.0",
    "serve": "^14.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint --config ./.eslintrc.json  --ignore-path ./.eslintignore",
    "src/**": "prettier --check --config ./.prettierrc --ignore-path ./.prettierignore"
  }
}
